<!DOCTYPE html>
<html>
<head>
  <title> <%= yield(:title) %> </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do%>
				<%= image_tag "logo.svg" %>
			<% end %>
		</div>
		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", root_path %></li>
			<li><%= link_to "New Post", new_article_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>
		<ul>
			<li class="category">Social</li>
			<li><a href="https://twitter.com/rupace10" target="_blank">Twitter</a></li>
			<li><a href= '#' >Instagram</a></li>
			<li><a href="https://github.com/rupace10" target="_blank">Github</a></li>
			<!-- <li><a href="mailto:hey@mackenziechild.me">Email</a></li> -->
		</ul>

		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Login", new_user_session_path %></p>
		<% end %>

	</div>

	<div id="main_content">
		<div id="header">

		<% if current_page?(root_path)%>
			<p>All Posts</p> |
		<% elsif current_page?(about_path)%>
			<p>About</p>
		<% else %>
		<%= link_to "Back to All Posts", root_path %>
		<% end %>

		<% if user_signed_in? %>
		Logged in as <%= current_user.email %>.
			<div class="buttons">
				<% if can? :update, @user %>
					| <%= link_to "Admin", admin_root_path %>
				<% end %>
				<%= link_to 'New Post', new_article_path, class: "button" %>
				<%= link_to "Log Out", destroy_user_session_path, :method => :delete, class: "button" %>
			</div>
		<% end %>
		</div>
		<% flash.each do|name, msg| %>
		<%= content_tag(:div, msg, class: "alert") %>
		<% end %>
	<%= yield %>
</div>
	<%= javascript_include_tag :defaults %>
	<p><%= notice %></p>
<p><%= alert %></p>
</body>

</html>
